@model IEnumerable<ProyectoLenguajes.Models.UserInformation>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Manage Application Users</h1>

<button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("Create", "SuperAdmin")'">Create User</button>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Roles)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    <button type="button" class="btn btn-dark btn-sm" onclick="location.href='@Url.Action("Details", "SuperAdmin", new { id = item.User.Id })'">Details</button> 
                    <button type="button" class="btn btn-dark btn-sm" onclick="location.href='@Url.Action("Edit", "SuperAdmin", new { id = item.User.Id })'">Edit</button> 
                    <button type="button" class="btn btn-dark btn-sm" onclick="location.href='@Url.Action("Delete", "SuperAdmin", new { id = item.User.Id })'">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center align-items-center text-center">
    <button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("DownloadUsersReportPDF", "SuperAdmin")'">Download Report</button>
</div>
