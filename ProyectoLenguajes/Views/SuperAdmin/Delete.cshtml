@model ProyectoLenguajes.Models.UserInformation

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        body {
            background-color: #000;
            font-family: Arial, sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        h1, h3, h4 {
            color: white;
            text-align: center;
        }

        .row {
            margin-top: 20px;
        }

        .btn-danger {
            display: block;
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: green;
            font-size: 16px;
            cursor: pointer;
        }

            .btn-danger:hover {
                background-color: lightgreen;
            }

        .btn-back {
            display: block;
            width: 100%;
            margin-top: 10px;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #333;
            color: #fff;
            font-size: 16px;
            text-decoration: none;
            text-align: center;
        }

            .btn-back:hover {
                background-color: #555;
            }

        .text-right {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Delete</h1>
        <h3 class="text-center">Are you sure you want to delete this?</h3>
        <div>
            <h4 class="text-center">Person</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Roles)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Roles)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.UserName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.UserName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="User.Id" />
                <div class="form-group button-container">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-back">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>
