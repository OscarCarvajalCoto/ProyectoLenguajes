@model ProyectoLenguajes.Models.Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<h1>Delete Comment</h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-@ViewBag.Message.Tipo fade show" role="alert">
        <strong> Mesaage: </strong>@Html.Encode(ViewBag.Message.Text)
    </div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Comment
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.comment1)
        </dd>
        <dt class = "col-sm-2">
            UserName
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.app_user)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="comment_id" />
        <input type="hidden" asp-for="ms_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-ms_id="@Model.ms_id">Back to List</a>
    </form>
</div>
