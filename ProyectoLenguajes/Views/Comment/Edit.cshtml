@model ProyectoLenguajes.Models.Comment

@{
    ViewData["Title"] = "Edit Comment";
}

<h1>Edit Comment</h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-@ViewBag.Message.Tipo fade show" role="alert">
        <strong> Mesaage: </strong>@Html.Encode(ViewBag.Message.Text)
    </div>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="comment_id" />
            <div class="form-group">
                <label asp-for="comment1" class="control-label">Comment</label>
                <input asp-for="comment1" class="form-control" autocomplete="off"/>
                <span asp-validation-for="comment1" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="app_user"/>
            <input type="hidden" asp-for="ms_id"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-ms_id="@Model.ms_id">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
