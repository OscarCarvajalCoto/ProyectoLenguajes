@model ProyectoLenguajes.Models.DTO.ChangeUserName

<h2>Cambiar nombre de usuario</h2>

@using (Html.BeginForm("ChangeUsername", "UserAuthentication", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.NewUsername, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.NewUsername, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.NewUsername, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Cambiar nombre de usuario" class="btn btn-primary" />
    </div>
}