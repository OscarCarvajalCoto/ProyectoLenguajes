@model ProyectoLenguajes.Models.EditUser

@{
    ViewData["Title"] = "ViewDetail";
}

<h1>Perfil</h1>
<img id="profileImagePreview" src="@Model.applicationUser.ProfilePicture" alt="Imagen de perfil" />
<div>
    <h4>Informacion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.applicationUser.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.applicationUser.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.user.email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.applicationUser.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.applicationUser.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to Home</a>
</div>

<input type="button" value="Cambiar Correo" onclick="@("window.location.href='" + @Url.Action("ChangeEmail", "Change") + "'");" />
<input type="button" value="Cambiar Nombre de Usuario" onclick="@("window.location.href='" + @Url.Action("ChangeUsername", "Change") + "'");" />
<input type="button" value="Cambiar Contraseña" onclick="@("window.location.href='" + @Url.Action("ChangePassword", "Change") + "'");" />
<input type="button" value="Cambiar Imagen" onclick="@("window.location.href='" + @Url.Action("ChangeProfilePicture", "Change") + "'");" />