
@inject Microsoft.AspNetCore.Identity.SignInManager<User> _singInManager

@if (_singInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" href="#" id="narvarDropdown" role="button"asp-area="" asp-controller="Home" asp-action="Index">
            Hello @(User.FindFirst("UserfirstName").Value + " "+User.FindFirst("UserLastName").Value)
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" asp-action="Logout" asp-controller="Account" >Logout</a>
            <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Account">Change Password</a>
        </div>   
    </li>
}
else
{
    <li class="nav-item ">
         <a class="btn btn-outline-primary" asp-action="Login" asp-controller="Account">Login</a>
         <a class="dropdown-item" asp-action="Signup" asp-controller="Account">Register</a>   
    </li>
}

