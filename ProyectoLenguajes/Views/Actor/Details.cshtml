@model ProyectoLenguajes.Models.Actor

@{
    ViewData["Title"] = "Actor Details";
}

<h1>Actor Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            FirstName
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.actor_first_name)
        </dd>
        <dt class = "col-sm-2">
            LastName
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.actor_last_name)
        </dd>
        <dt class = "col-sm-2">
            Photo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.actor_photo)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-actor_id="@Model.actor_id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
