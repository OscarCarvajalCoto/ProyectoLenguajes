@model ProyectoLenguajes.Models.Episode

@{
    ViewData["Title"] = "Create";
    int ms_id = ViewBag.ms_id;
}

<h1>Create</h1>

<h4>Episode</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ms_id" class="control-label"></label>
                <input asp-for="ms_id" class="form-control" value="@ms_id" readonly/>
                <span asp-validation-for="ms_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="season_id" class="control-label"></label>
                <input asp-for="season_id" class="form-control" />
                <span asp-validation-for="season_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="episode_id" class="control-label"></label>
                <input asp-for="episode_id" class="form-control" />
                <span asp-validation-for="episode_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tittle" class="control-label"></label>
                <input asp-for="tittle" class="form-control" />
                <span asp-validation-for="tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="duration" class="control-label"></label>
                <input asp-for="duration" class="form-control" />
                <span asp-validation-for="duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-ms_id="@ms_id">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
