@model ProyectoLenguajes.Models.Movie_Serie

@{
    ViewData["Title"] = "Add Movie or Serie";
}

<h1>Add Movie Or Serie</h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-@ViewBag.Message.Tipo fade show" role="alert">
        <strong> Mesaage: </strong>@Html.Encode(ViewBag.Message.Text)
    </div>
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ms_type" class="control-label">Type</label>
                <input asp-for="ms_type" class="form-control" list="types" autocomplete="off" />
                <datalist id="types">
                    <option value="movie"/>
                    <option value="serie"/>
                 </datalist>
                <span asp-validation-for="ms_type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tittle" class="control-label">Tittle</label>
                <input asp-for="tittle" class="form-control" autocomplete="off" />
                <span asp-validation-for="tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="synopsis" class="control-label">Synopsis</label>
                <input asp-for="synopsis" class="form-control" autocomplete="off" />
                <span asp-validation-for="synopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="release_year" class="control-label">Release Year</label>
                <input asp-for="release_year" class="form-control" autocomplete="off" />
                <span asp-validation-for="release_year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="classificationMS" class="control-label">Classification</label>
                <input asp-for="classificationMS" class="form-control" autocomplete="off" />
                <span asp-validation-for="classificationMS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="director" class="control-label">Director</label>
                <input asp-for="director" class="form-control" autocomplete="off" />
                <span asp-validation-for="director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cover" class="control-label">Cover</label>
                <input asp-for="cover" class="form-control" autocomplete="off"/>
                <span asp-validation-for="cover" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_added" class="control-label">Date Added</label>
                <input asp-for="date_added" class="form-control" autocomplete="off" />
                <span asp-validation-for="date_added" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="duration" class="control-label">Duration</label>
                <input asp-for="duration" class="form-control" autocomplete="off" />
                <span asp-validation-for="duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
