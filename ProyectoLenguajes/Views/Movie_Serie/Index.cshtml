@model IEnumerable<ProyectoLenguajes.Models.Movie_Serie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tittle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.synopsis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.release_year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.classificationMS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cover)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_added)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.synopsis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.release_year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.classificationMS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cover)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_added)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duration)
            </td>
            <td>
                <a asp-action="Edit" asp-route-ms_id="@item.ms_id">Edit</a> |
                <a asp-action="Details" asp-route-ms_id="@item.ms_id">Details</a> |
                <a asp-action="Delete" asp-route-ms_id="@item.ms_id">Delete</a>
                <a asp-controller="Episode" asp-action="Index" asp-route-ms_id="@item.ms_id">Manage Episodes</a>
            </td>
        </tr>
}
    </tbody>
</table>
